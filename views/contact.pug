extends layout

block content

// Navigation
nav.navbar.navbar-expand-md.navbar-light.bg-light.sticky-top
  .container
    a.navbar-brand(href='index.html')
      img(src='images/logogry.png' alt='logo' title='Logo')
    h2 Sweetpea Travel&apos;s
    button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarResponsive')
      span.navbar-toggler-icon
    #navbarResponsive.collapse.navbar-collapse
      ul.navbar-nav.ml-auto
        li.nav-item
          a.nav-link.active(href='index.html') Home
        li.nav-item
          a.nav-link(href='about.html') About
        li.nav-item
          a.nav-link(href='contact.html') Contact
        li.nav-item
          a.nav-link(href='register.html') Register
// Contact
.container
  div(style='text-align:center')
    h2 We would love to hear from you
  .row
    .column
      img(src='images/arizonatree1.jpg' style='width:100%')
    .column
      form(action='')
        label(for='fname') First Name
        input#fname(type='text' name='firstname' placeholder='Your name..')
        label(for='lname') Last Name
        input#lname(type='text' name='lastname' placeholder='Your last name..')
        label(for='country') Country
        select#country(name='country')
          option(value='canada') Canada
          option(value='usa') USA
          option(value='australia') Australia
          option(value='uk') UK
          option(value='other') Other
        label(for='subject') Subject
        textarea#subject(name='subject' placeholder='Write something..' style='height:170px')
        input(type='submit' value='Submit')
// Footer
footer
  .col-12
    .font-weight-bold
      h5 &copy; Sweetpea Travel&apos;s